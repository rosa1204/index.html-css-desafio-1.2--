/*em css*/

body, ul, li, p *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style: none;
    font-family: Arial, Helvetica, sans-serif;
}
a{
  text-decoration: none;
  color: #fff;
}
.header{
  width: 100%;
  height: 40px;
  background-color: #212121;
  display: flex;
  justify-content: space-around;
  padding: 1px ;
  align-items: center;
}
.menu{
  display: flex;
}
.menu li{
  margin-left: 10px;
}
.menu li a{
  display: block;
  padding: 5px;
}
.menu li a:hover {
  background-color: #f9a825;
  color: #fff;
  border-radius: 40%;
}
.menu li.active{
background-color: #f9a825;
border-radius: 40%;
}
#borda{
  border-right: 1px dashed #000;
}
.estilo{
  background-color: rgb(133, 204, 248);

  width: 178px;
  height: 20px;
  color: #fff; 
  cursor: pointer;
}

.paragrafo{
  margin: 250px;
  background-color: #fafafa;
  display:flex ;
  justify-content: center;
  padding: 10px ;
  align-items: center;
}
.text{
  width: 100%;
  height: 80px;
  background-color: #212121;
  color: #fafafa;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 0;

}

